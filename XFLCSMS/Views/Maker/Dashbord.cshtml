                            <h1 class="m-0"> Maker Dashboard</h1>
                        </div><!-- /.col -->

                    </div><!-- /.row -->
                </div><!-- /.container-fluid -->
            </div>
            <!-- /.content-header -->
            <!-- Main content -->
            <section class="content">
                <div class="container-fluid">
                    <!-- Small boxes (Stat box) -->
                    <div class="row">
                        <div class="col-lg-4 col-6">
                            <!-- small box -->
                            <div class="small-box bg-primary">
                                <div class="inner">
                                    <h3>@Model.TotalTicket</h3>

                                    <p>Total Tickets</p>
                                </div>
                                <div class="icon">
                                    <i class="ion ion-flag"></i>
                                </div>
                                <a asp-action="MackerTicketList" class="small-box-footer"> More info <i class="fas fa-arrow-circle-right"></i></a>
                            </div>
                        </div>
                        <!-- ./col -->
                        <div class="col-lg-4 col-6">
                            <!-- small box -->
                            <div class="small-box bg-warning">
                                <div class="inner">
                                    <h3>@Model.TotalQueue</h3>

                                    <p>In Queue</p>
                                </div>
                                <div class="icon">
                                    <i class="ion ion-ios-list"></i>
                                </div>
                                <a asp-action="UnassignedTicketList" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
                            </div>
                        </div>
                        <!-- ./col -->
                        <div class="col-lg-4 col-6">
                            <!-- small box -->
                            <div class="small-box bg-success">
                                <div class="inner">
                                    <h3>@Model.TotalClosed</h3>

                                    <p>Closed Tickets</p>
                                </div>
                                <div class="icon">
                                    <i class="ion ion-checkmark-circled"></i>
                                </div>
                                <a asp-action="ClosedTicketList" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
                            </div>
                        </div>
                        <!-- ./col -->
                    </div>
                    <!-- /.row -->
                    <!-- Main row -->
                    <div class="row">
                        <section class="col-md-6 connectedSortable">
                            <div class="card card-success">
                                <div class="card-header">
                                    <h3 class="card-title">Timeline wise Graphical view (Last 1 Year)</h3>
                                    <div class="card-tools">
                                        <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                            <i class="fas fa-minus"></i>
                                        </button>
                                    </div>
                                    <!-- /.card-tools -->
                                </div>
                                <!-- /.card-header -->
                                <div class="card-body">
                                    <canvas id="ticketsChart" height="400" width="400"></canvas>
                                    <!-- Timeline Graph-->
                                    <script>
                                        // Sample data for tickets (you can replace it with your actual data)
                                        const barChartData = {
                                            labels: ['Today', 'Weekly', 'Monthly', 'Yearly'],
                                            datasets: [{
                                                label: 'Total Tickets',
                                                data: [@Model.TodayTotalTicket, @Model.WeeklyTotalTicket, @Model.MonthlyTotalTicket, @Model.YearlyTotalTicket], // Replace with your actual data
                                                backgroundColor: 'rgba(75, 192, 192, 0.2)', // Paste-color
                                                borderColor: 'rgba(75, 192, 192, 1)',
                                                borderWidth: 1
                                            },
                                            {
                                                label: 'Tickets in Queue',
                                                data: [@Model.TodayTotalQueue, @Model.WeeklyTotalQueue, @Model.MonthlyTotalQueue, @Model.YearlyTotalQueue], // Replace with your actual data
                                                backgroundColor: 'rgba(255, 206, 86, 0.2)', // Yellow Color
                                                borderColor: 'rgba(255, 206, 86, 1)',
                                                borderWidth: 1
                                            },
                                            {
                                                label: 'Closed Tickets',
                                                data: [@Model.TodayTotalClosed, @Model.WeeklyTotalClosed, @Model.MonthlyTotalClosed, @Model.YearlyTotalClosed], // Replace with your actual data
                                                backgroundColor: 'rgba(0, 255, 0, 0.2)', // Green color
                                                borderColor: 'rgba(0, 255, 0, 1)',
                                                borderWidth: 1
                                            }
                                            ]
                                        };

                                        const barChartConfig = {
                                            type: 'bar',
                                            data: barChartData,
                                            options: {
                                                scales: {
                                                    y: {
                                                        beginAtZero: true
                                                    }
                                                }
                                            }
                                        };

                                        // Create the bar chart
                                        const barCtx = document.getElementById('ticketsChart').getContext('2d');
                                        new Chart(barCtx, barChartConfig);
                                    </script>
                                </div>
                                <!-- /.card-body -->
                            </div>
                            <!-- /.card -->
                        </section>

                        <!-- Add another section for the pie chart -->
                        <section class="col-md-6 connectedSortable">
                            <div class="card card-success">
                                <div class="card-header">
                                    <h3 class="card-title">Ticket Status (All Time)</h3>
                                    <div class="card-tools">
                                        <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                            <i class="fas fa-minus"></i>
                                        </button>
                                    </div>
                                    <!-- /.card-tools -->
                                </div>
                                <div class="card-body">
                                    <canvas id="pieChart" height="400" width="400"></canvas>
                                    <script>
                                        // Calculate percentage values for pie chart
                                        var totalTickets = @Model.TotalTicket; // Replace with your actual total tickets count
                                        var inQueueTickets = @Model.TotalQueue; // Replace with your actual in-queue tickets count
                                        var closedTickets = @Model.TotalClosed; // Replace with your actual closed tickets count

                                        var percentageInQueue = ((inQueueTickets / totalTickets) * 100).toFixed(2);
                                        var percentageClosed = ((closedTickets / totalTickets) * 100).toFixed(2);

                                        // Sample data for pie chart
                                        var pieChartData = {
                                            labels: [`In Queue (${percentageInQueue}%)`, `Closed (${percentageClosed}%)`],
                                            datasets: [{
                                                data: [inQueueTickets, closedTickets],
                                                backgroundColor: ['#FFD700', '#008000'],
                                                hoverBackgroundColor: ['#FFD700', '#008000']
                                            }]
                                        };

                                        var pieChartConfig = {
                                            type: 'pie',
                                            data: pieChartData,
                                            options: {
                                                tooltips: {
                                                    callbacks: {
                                                        label: function (tooltipItem, data) {
                                                            var dataset = data.datasets[tooltipItem.datasetIndex];
                                                            var total = dataset.data.reduce(function (previousValue, currentValue) {
                                                                return previousValue + currentValue;
                                                            });
                                                            var currentValue = dataset.data[tooltipItem.index];
                                                            var percentage = ((currentValue / total) * 100).toFixed(2);
                                                            return `${data.labels[tooltipItem.index]}: ${currentValue} (${percentage}%)`;
                                                        }
                                                    }
                                                }
                                            }
                                        };

                                        // Create the pie chart
                                        var pieCtx = document.getElementById('pieChart').getContext('2d');
                                        new Chart(pieCtx, pieChartConfig);
                                    </script>
                                </div>
                            </div>
                        </section>
                    </div>



                 </div>
