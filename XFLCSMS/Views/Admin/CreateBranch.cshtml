@model XFLCSMS.Models.Branch.BranchView;
<!-- Main content -->
<section class="content">

    <h1>Create</h1>

    <h4>Branch</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-controller="Admin" asp-action="CreateBranch" method="post" >
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="@Model.BranchName" class="control-label"></label>
                    <input asp-for="@Model.BranchName" class="form-control" />
                    <span asp-validation-for="@Model.BranchName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.BrokerageId" class="control-label"></label>
                    <select asp-for="@Model.BrokerageId" id="BrokerageId" name="BrokerageId" class="form-control">
                        @foreach (var item in @Model.brocarage)
                        {
                            <option  value="@item.BrokerageId">@item.BrokerageHouseName</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-controller="Admin" asp-action="BranchList">Back to List</a>
    </div>

</section>
            <!-- /.content -->
<script type="text/javascript">
    // Define a function named preventback
    function preventback() {
        // Forward the browser's history by one step, effectively preventing the user from going back
        window.history.forward();
    }

    // Set a timeout to call the preventback function immediately after the script is executed
    setTimeout("preventback()", 0);

    // When the window loads, assign a null function to the onload event to effectively do nothing
    window.onload = function () { null };
</script>
      
